extends layout

block content   
  h2 Update Book
    if(errors)
            h2.error Ooops! 
            ul.error    
                each error in errors 
                    li= error.message

    form(action="/new", method="post")
        
      p
        label(for='title') Title
        input(name='title' type='text' value=book.title id='title')
      p
        label(for='author') Author
        input(name='author' type='text' value=book.author id='author')
      p
        label(for='genre') Genre
        input(name='genre' type='text' value=book.genre id='genre')
      p
        label(for='year') Year
        input(name='year' type='text' value=book.year id='year')
      p
        input(type='submit' value='Update Book')
    form(method='post' action=`/${book.id}/delete` onsubmit="return confirm('Do you really want to delete this book?');")
      p
        a.button(href='/books/') Cancel
      p
        input(type='submit' value='Delete Book')